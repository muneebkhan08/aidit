{
  "expo": {
    "name": "aidit",
    "slug": "aidit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "aidit",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#F8FAFC",
          "dark": {
            "backgroundColor": "#0F172A"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow aidit to access your camera to capture photos for AI editing"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow aidit to access your photos for AI editing",
          "savePhotosPermission": "Allow aidit to save edited photos to your gallery",
          "isAccessMediaLocationEnabled": true,
          "isAudioEnabled": false
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow aidit to access your photos for AI editing"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}